@model Movie

@{
    ViewData["Title"] = "Movie Details";
}

<div data-aos="fade-up" class="container my-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white fw-bold fs-5 d-flex justify-content-between align-items-center">
            <span>Movie Details - @Model.Name</span>
            <a asp-action="Index" asp-controller="Movie" class="btn btn-light btn-sm">Back to List</a>
        </div>

        <div class="card-body p-4">
            <div class="row">
                <!-- Main image & sub images -->
                <div class="col-md-4 text-center">
                    <img src="~/images/@Model.MainImage"
                         alt="@Model.Name"
                         class="img-fluid rounded-4 shadow-sm border mb-3" />

                    @if (Model.SubImages != null && Model.SubImages.Any())
                    {
                        <h6 class="fw-bold mt-4">More Images</h6>
                        <div class="d-flex flex-wrap gap-2 justify-content-center">
                            @foreach (var sub in Model.SubImages)
                            {
                                <img src="~/images/MovieSubImg/@sub"
                                     alt="Sub image"
                                     width="80"
                                     height="80"
                                     class="rounded border shadow-sm" />
                            }
                        </div>
                    }
                </div>

                <!-- Movie details -->
                <div class="col-md-8">
                    <h3 class="fw-bold mb-3">@Model.Name</h3>

                    <p class="mb-2"><strong>Category:</strong> @Model.Category?.Name</p>
                    <p class="mb-2"><strong>Cinema:</strong> @Model.Cinema?.Name</p>
                    <p class="mb-2"><strong>Price:</strong> <span class="text-success fw-semibold">$@Model.Price</span></p>
                    <p class="mb-2"><strong>Date:</strong> @Model.DateTime.ToString("dd MMM yyyy")</p>
                    <p class="mb-2">
                        <strong>Status:</strong>
                        @if (Model.Status)
                        {
                            <span class="badge text-bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge text-bg-danger">Inactive</span>
                        }
                    </p>
                </div>
            </div>

            <hr />

            <!-- 🎭 Actors Section -->
            @if (Model.MovieActors != null && Model.MovieActors.Any())
            {
                <div class="mt-4">
                    <h4 class="fw-bold mb-4">Actors</h4>
                    <div class="row row-cols-2 row-cols-md-4 g-4">
                        @foreach (var movieActor in Model.MovieActors)
                        {
                            var actor = movieActor.Actor;
                            if (actor != null)
                            {
                                <div data-aos="fade-up" class="col text-center">
                                    <div class="card border-0 shadow-sm h-100">
                                        <img src="~/images/Actors/@actor.Image"
                                             alt="@actor.Name"
                                             class="rounded-circle mx-auto mt-3 border shadow-sm"
                                             style="width:100px; height:100px; object-fit:cover;" />
                                        <div class="card-body">
                                            <h6 class="fw-semibold mt-2">@actor.Name</h6>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
            }
            else
            {
                <p class="text-muted mt-3">No actors added for this movie yet.</p>
            }
        </div>
    </div>
</div>