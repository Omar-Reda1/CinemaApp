@model Promotion

<div class="container">
    <div class="row mb-3 align-items-center my-3">
        <div class="col-md-6">
            <h2 class="display-6">Edit Promotion</h2>
        </div>
    </div>

    <div class="row my-3">
        <div class="col-12">
            <form method="post">

                <!-- Hidden Id -->
                <input type="hidden" asp-for="Id" />

                <!-- Code -->
                <div class="mb-3">
                    <label for="Code" class="form-label">Code</label>
                    <input class="form-control" asp-for="Code" />
                    <span class="text-danger" asp-validation-for="Code"></span>
                </div>

                <!-- Discount -->
                <div class="mb-3">
                    <label for="Discount" class="form-label">Discount</label>
                    <input type="number" class="form-control" asp-for="Discount" />
                    <span class="text-danger" asp-validation-for="Discount"></span>
                </div>

                <!-- ValidTo -->
                <div class="mb-3">
                    <label for="ValidTo" class="form-label">Valid To</label>
                    <input type="datetime-local"
                           class="form-control"
                           asp-for="ValidTo"
                           value="@Model.ValidTo.ToString("yyyy-MM-ddTHH:mm")" />
                    <span class="text-danger" asp-validation-for="ValidTo"></span>
                </div>

                <!-- IsValid -->
                <div class="mb-3">
                    <label asp-for="IsValid" class="form-label">Is Active?</label>
                    <select asp-for="IsValid" class="form-select">
                        <option value="true" selected="@(Model.IsValid)">Active</option>
                        <option value="false" selected="@(!Model.IsValid)">Not Active</option>
                    </select>
                </div>

                <!-- Movie -->
                <div class="mb-3">
                    <label for="MovieId" class="form-label">Movie</label>
                    <select asp-for="MovieId" class="form-select">
                        <option value="">-- Select Movie --</option>
                        @foreach (var item in ViewBag.movies)
                        {
                            <option value="@item.Id" selected="@(Model.MovieId == item.Id)">
                                @item.Name
                            </option>
                        }
                    </select>
                    <span class="text-danger" asp-validation-for="MovieId"></span>
                </div>

                <button type="submit" class="btn btn-primary">Save Changes</button>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
