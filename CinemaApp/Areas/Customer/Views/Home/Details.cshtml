@model Movie

@{
    ViewData["Title"] = "Movie Details";
}

<section class="movie-details-section">
    <div class="movie-main-card">
        <img src="~/images/@Model.MainImage" alt="@Model.Name" class="movie-main-img" />

        <div class="movie-main-info">
            <h2>🎬 @Model.Name</h2>
            <p><strong>📂 Category : </strong> @Model.Category?.Name</p>
            <p><strong>📅 Date : </strong> @Model.DateTime.ToString("dd MMM yyyy")</p>
            <p><strong>🏢 Cinema : </strong> @Model.Cinema?.Name</p>
            <p><strong>💰 Price : </strong> $@Model.Price</p>
            <p><strong>📝 Description : </strong></p>
            <p>@Model.Description</p>

            @if (Model.MovieActors != null && Model.MovieActors.Count > 0)
            {
                <p><strong>🎭 Actors :</strong></p>
                <ul class="actors-list">
                    @foreach (var ma in Model.MovieActors)
                    {
                        <li>@ma.Actor?.Name</li>
                    }
                </ul>
            }

            <button class="book-btn">🎟️ Book Ticket</button>
        </div>
    </div>

    @if (Model.SubImages != null && Model.SubImages.Count > 0)
    {
        <h3>Sub Images</h3>
        <div class="movie-subimages-grid">
            @foreach (var img in Model.SubImages)
            {
                <img src="~/images/MovieSubImg/@img" alt="Sub Image" class="sub-image-card" />
            }
        </div>
    }
</section>


<style>
    .movie-details-section {
        max-width: 1200px;
        margin-top: 80px;
        margin-left: 50px;
        padding: 20px;
    }

    .movie-main-card {
        display: flex;
        gap: 30px;
        margin-bottom: 30px;
    }

    .movie-main-img {
        width: 300px;
        height: auto;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0,0,0,0.2);
    }

    .movie-main-info {
        flex: 1;
    }

    .movie-main-info h2 {
        margin-top: 0;
    }

    .actors-list {
        list-style: none;
        padding-left: 0;
    }

    .actors-list li::before {
        content: "🎭 ";
    }

    .book-btn {
        margin-top: 20px;
        padding: 10px 20px;
        background-color: #ff6b6b;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

    .book-btn:hover {
        background-color: #ff3b3b;
    }

    .movie-subimages-grid {
        display: flex;
        flex-wrap: wrap;
        gap: 15px;
    }

    .sub-image-card {
        width: 200px;
        height: auto;
        border-radius: 5px;
        box-shadow: 0 0 5px rgba(0,0,0,0.2);
    }
</style>