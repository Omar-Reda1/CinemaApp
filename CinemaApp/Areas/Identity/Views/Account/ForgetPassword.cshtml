@model ForgetPasswordVM



<div class="login-container">
	<div class="login-card">
		<div class="login-header">
			<h2>Forget Password</h2>
			<p>Enter Your Email</p>

		</div>

		<form asp-action="ForgetPassword" asp-controller="Account" method="post" class="login-form" id="loginForm" novalidate>
			@Html.AntiForgeryToken()

			<!-- لعرض أخطاء الموديل -->
			<div asp-validation-summary="ModelOnly" class="validation-summary"></div>

			<div class="form-group">
				<div class="input-wrapper">
					<input asp-for="UserNameOREmail" class="form-control" autocomplete="email" placeholder=" " />
					<label asp-for="UserNameOREmail"></label>
					<span class="focus-border"></span>
				</div>
				<span asp-validation-for="UserNameOREmail" class="text-danger"></span>
			</div>
			<button type="submit" class="login-btn btn">
				<span class="btn-text">Send</span>
				<span class="btn-loader"></span>

			</button>
			<div class="signup-link">
				<a asp-action="Login">Back To Login</a>
			</div>
		</form>
	</div>
</div>


