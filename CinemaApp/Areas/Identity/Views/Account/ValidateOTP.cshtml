@model ValidateOTPVM



<div class="login-container">
	<div class="login-card">
		<div class="login-header">
			<h2>Validate OTP</h2>
			<p>Enter OTP</p>

		</div>

		<form asp-action="ValidateOTP" asp-controller="Account" method="post" class="login-form" id="loginForm" novalidate>
			@Html.AntiForgeryToken()
			<input type="hidden" name="UserId" value="@Model.UserId"/>
			<!-- لعرض أخطاء الموديل -->
			<div asp-validation-summary="ModelOnly" class="validation-summary"></div>

			<div class="form-group">
				<div class="input-wrapper">
					<input asp-for="OTP" class="form-control"  placeholder=" " />
					<label asp-for="OTP"></label>
					<span class="focus-border"></span>
				</div>
				<span asp-validation-for="OTP" class="text-danger"></span>
			</div>
			<button type="submit" class="login-btn btn">
				<span class="btn-text">Check</span>
				<span class="btn-loader"></span>

			</button>
			<div class="signup-link">
				<a asp-action="Login">Back To Login</a>
			</div>
		</form>
	</div>
</div>


