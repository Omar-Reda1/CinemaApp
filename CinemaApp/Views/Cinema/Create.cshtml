@model Cinema

@{
    ViewData["Title"] = "Add New Cinema";
}

<style>
    .create-container {
        max-width: 500px;
        margin: 50px auto;
        padding: 30px;
        background: rgba(105, 13, 197, 0.1);
        border-radius: 15px;
        box-shadow: 1px 5px 60px 0px #100a886b;
        color: #fff;
        font-family: Arial, sans-serif;
    }

        .create-container h2 {
            text-align: center;
            margin-bottom: 20px;
        }

        .create-container label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
        }

        .create-container input[type="text"],
        .create-container input[type="file"] {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border-radius: 8px;
            border: none;
            outline: none;
        }

        .create-container button {
            width: 100%;
            padding: 10px;
            border: none;
            border-radius: 8px;
            background-color: #6b64f3;
            color: white;
            font-weight: bold;
            cursor: pointer;
            transition: 0.3s;
        }

            .create-container button:hover {
                background-color: #4e45c2;
            }
</style>

<div class="create-container">
    <h2>🎬 Add New Cinema</h2>

    <form id="CinemaForm" asp-action="Create" asp-controller="Cinema" method="post" enctype="multipart/form-data">
        <label for="Name">Cinema Name</label>
        <input type="text" id="Name" name="Name" placeholder="Enter cinema name" required />

        <label for="Image">Cinema Image</label>
        <input type="file" id="Image" name="Image" accept="image/*" required />

        <button type="submit">Add Cinema</button>
    </form>
</div>
<script>
    document.getElementById("CinemaForm").addEventListener("submit", function (e) {
        e.preventDefault(); // Prevent automatic submission

        Swal.fire({
            title: "Are you sure you want to save this Cinema ?",
            text: "The movie will be saved now",
            icon: "question",
            showCancelButton: true,
            confirmButtonText: "Yes save it",
            cancelButtonText: "Cancel"
        }).then((result) => {
            if (result.isConfirmed) {
                Swal.fire({
                    title: "Saved successfully",
                    text: "The Cinema has been added",
                    icon: "success",
                    timer: 2000,
                    showConfirmButton: false,
                    willClose: () => {
                        e.target.submit(); // Submit the form after the success message
                    }
                });
            } else {
                Swal.fire({
                    title: "Cancelled",
                    text: "The Cinema was not saved",
                    icon: "info",
                    timer: 2000,
                    showConfirmButton: false
                });
            }
        });
    });
</script>